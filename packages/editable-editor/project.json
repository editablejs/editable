{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/editable-editor/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "packages/editable-editor/package.json",
        "outputPath": "dist/packages/editable-editor",
        "tsConfig": "packages/editable-editor/tsconfig.lib.json",
        "entryFile": "packages/editable-editor/src/index.ts",
        "generatePackageJson": true,
        "updateBuildableProjectDepsInPackageJson": false,
        "generateExportsField": true,
        "compiler": "babel",
        "format": ["esm", "umd"],
        "rollupConfig": ["packages/editable-editor/rollup.config.js"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/editable-editor/src/**/*.{ts,js,tsx,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/editable-editor"],
      "options": {
        "jestConfig": "packages/editable-editor/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "publish-npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "push": true,
        "trackDeps": true,
        "postTargets": ["editable-editor:publish-npm"],
        "commitMessageFormat": "release(${projectName}): ðŸŽ¸ cut release to ${version}"
      }
    }
  },
  "tags": []
}
